<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:colorGrid="clr-namespace:GlyphEdit.Wpf.ColorGrid">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/GlyphEdit.WPF;component/Themes/Theme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type colorGrid:ColorPaletteGrid}">
        <Setter Property="Background" Value="#404040" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="ColorPatchBorderBrush" Value="#111111" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type colorGrid:ColorPaletteGrid}">
                    <!-- anything here will show in front of custom code in OnRender() -->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>