<Window x:Class="GlyphEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlyphEdit"
        mc:Ignorable="d"
        Title="GlyphEdit v0.1" Height="768" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#333333">
            <StackPanel Orientation="Vertical" Margin="5">
                <Button VerticalAlignment="Top" Width="28" Height="28" BorderThickness="1" BorderBrush="#090909" ToolTip="Glyph pencil" Margin="0,0,0,4">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#191919" Offset="0.0" />
                            <GradientStop Color="#282828" Offset="0.7" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Image Source="pack://application:,,,/Images/pencil.png" Stretch="Uniform" Width="18" Height="18"></Image>
                </Button>
                <Button VerticalAlignment="Top" Width="28" Height="28" BorderThickness="1" BorderBrush="#090909" ToolTip="Eraser">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#191919" Offset="0.0" />
                            <GradientStop Color="#282828" Offset="0.7" />
                        </LinearGradientBrush>
                    </Button.Background>
                    <Image Source="pack://application:,,,/Images/eraser.png" Stretch="Uniform" Width="18" Height="18"></Image>
                </Button>
            </StackPanel>
        </Grid>
        <local:GlyphDocumentViewer Grid.Column="1"></local:GlyphDocumentViewer>
    </Grid>
</Window>
