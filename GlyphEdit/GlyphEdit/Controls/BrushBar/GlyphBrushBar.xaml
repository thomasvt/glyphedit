<UserControl x:Class="GlyphEdit.Controls.BrushBar.GlyphBrushBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:brushState="clr-namespace:GlyphEdit.Controls.BrushBar.BrushState"
             xmlns:glyphPicker="clr-namespace:GlyphEdit.Controls.BrushBar.GlyphPicker"
             xmlns:palettePicker="clr-namespace:GlyphEdit.Controls.BrushBar.PalettePicker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" Background="#333333" MinWidth="150">
        <brushState:BrushState Background="#404040" Padding="18" />
        <glyphPicker:GlyphPicker Margin="18" />
        <palettePicker:PalettePicker Margin="18" />
    </StackPanel>
</UserControl>
